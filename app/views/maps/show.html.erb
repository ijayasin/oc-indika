<p id="notice"><%= notice %></p>

<%= render 'map_view', map: @map, editable: false %>

<h2 class="mt-2"><%= @map.name %></h2>

<dl class="row map-details my-2 float-right">
  <dt class="col-sm-2">Map ID</dt>
  <dd class="col-sm-10"><%= @map.id %></dd>
  <dt class="col-sm-2">Created At</dt>
  <dd class="col-sm-10"><%= @map.created_at %></dd>
  <dt class="col-sm-2">Updated At</dt>
  <dd class="col-sm-10"><%= @map.updated_at %></dd>
  <dt class="col-sm-2">SW Corner</dt>
  <dd class="col-sm-3"><%= @map.lng1 %></dd>
  <dd class="col-sm-3"><%= @map.lat1 %></dd>
  <dt class="col-sm-2">NE Corner</dt>
  <dd class="col-sm-3"><%= @map.lng2 %></dd>
  <dd class="col-sm-3"><%= @map.lat2 %></dd>
</dl>

<div class="row my-2">
  <%= link_to 'Destroy Map', @map, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mr-1' %>
  <%= link_to 'Edit', edit_map_path(@map), class: 'btn btn-primary mr-1' %>
  <%= link_to 'Back', maps_path, class: 'btn btn-secondary' %>
</div>
